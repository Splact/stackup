{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.babel.js"
      }
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "react/prefer-stateless-function": 0,
    "global-require": 0,
    "no-constant-condition": 0
  }
}
